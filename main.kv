#:import utils kivy.utils
#:import SlideTransition kivy.uix.screenmanager.SlideTransition
#:import NoTransition kivy.uix.screenmanager.NoTransition


GridLayout:
    cols: 1
    ScreenManager:
        id:screen_manager
        HomeScreen:
            name: 'home_screen'
            id: home_screen

    ###################################

        ProductScreen:
            id: product_screen
            name: 'product_screen'

            GridLayout: # third grid with 70% of height (.7). Starts from 80% of all size (.8)
                cols: 2
                rows: 3
                pos_hint: {'top': .8, 'left': 1}
                size_hint: 1, .3
                ImageButton:
                    name: ''
                    text:''
                    source: 'icons/products.png'
                    on_press:
                        self.source = 'icons/products_small.png'
                    on_release:
                        self.source = 'icons/products.png'
                        app.change_screen('detailed_product_screen')

                ImageButton:
                    name: 'calc_ico'
                    text: ''
                    source: 'icons/calc.png'
                    on_press:
                        self.source = 'icons/calc_small.png'
                    on_release:
                        self.source = 'icons/calc.png'
                        app.change_screen('calc_screen')


        DetailedProductScreen:
            id: detailed_product_screen
            name: 'detailed_product_screen'

        CalcScreen:
            id: calc_screen
            name: 'calc_screen'

